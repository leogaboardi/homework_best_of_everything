<div class="page-header">
  <h1>Dish: <%= Dish.find(@dish.id).name %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @dish.name %></dd>

  <dt>Cuisine</dt>
  <dd><%= Cuisine.find(@dish.cuisine_id).name %></dd>

  <dt>
  <% if @favorites.count >= 1  %>
  <%= "Favorites" %>
  <% end  %>
  </dt>
  <dd>
    <ul>

      <% @favorites.each do |favs| %>
      <li><%= Venue.find(favs.venue_id).name  %> - User: <%= User.find(favs.user_id).username  %></li>
      <% end %>
    </ul>
  </dd>
</dl>
